@{
    Layout = "~/Areas/Bonepile/Views/Shared/_Layout_Bonepile.cshtml";
}

<div class="dashboard-stage">
    <div class="dashboard-wrapper">
        <div class="dashboard-grid">
            <div class="dashboard-left">
                <div class="data-card chart-card">
                    <div class="panel-title">Trạng Thái</div>
                    <div class="chart-container-lg">
                        <div id="statusDonutChart" class="echart-surface"></div>
                    </div>
                </div>
            </div>
            <div class="dashboard-right">
                <div class="data-card kpi-card">
                    <div class="kpi-grid">
                        <div class="donut-box"><div class="donut-label">Total</div><div class="donut-percent" id="totalCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">ScrapHasTask</div><div class="donut-percent" id="scrapCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">ScrapLacksTask</div><div class="donut-percent" id="noTaskscrapCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">WaitingApprovalScrap</div><div class="donut-percent" id="waitingScrapCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">Linked</div><div class="donut-percent" id="linkedCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">WaitingLink</div><div class="donut-percent" id="waitingLinkCount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">ApprovedBGA</div><div class="donut-percent" id="approvedBGACount">N/A</div></div>
                        <div class="donut-box"><div class="donut-label">WaitingApprovalBGA</div><div class="donut-percent" id="waitingBGACount">N/A</div></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="data-card table-card">
            <div class="table-responsive">
                <table id="sumMaterialsTable" class="display table table-bordered table-striped datatable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>SERIAL_NUMBER</th>
                            <th>PRODUCT_LINE</th>
                            <th>MODEL_NAME</th>
                            <th>MO_NUMBER</th>
                            <th>WIP_GROUP</th>
                            <th>ERROR_FLAG</th>
                            <th>GROUP_NAME</th>
                            <th>IN_STATION_TIM</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="recordsModal" tabindex="-1" aria-labelledby="recordsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="recordsModalLabel">Chi Tiết Serial</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table id="recordsTable" class="display table table-bordered table-striped datatable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>SERIAL_NUMBER</th>
                            <th>PRODUCT_LINE</th>
                            <th>MODEL_NAME</th>
                            <th>MO_NUMBER</th>
                            <th>WIP_GROUP</th>
                            <th>ERROR_FLAG</th>
                            <th>GROUP_NAME</th>
                            <th>IN_STATION_TIM</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/areas/bonepile/js/khob31.js?v=@DateTime.Now.Ticks"></script>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: radial-gradient(circle at 50% 0%, #f7faff 0%, #dfe9ff 60%);
            color: #1e2a45;
            font-family: "Segoe UI", "Roboto", Arial, sans-serif;
            min-height: 100vh;
            overflow-y: auto;
        }

        .dashboard-stage {
            width: 100%;
            display: flex;
            justify-content: center;
            padding: 2rem 0 3rem;
            overflow-x: hidden;
        }

        .dashboard-wrapper {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1.5rem 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: 0.65fr 0.35fr;
            gap: 1.5rem;
            align-items: stretch;
        }

        /* Đồng bộ chiều cao 2 cột */
        .dashboard-left,
        .dashboard-right {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: 0.65fr 0.35fr;
            gap: 1.5rem;
            align-items: stretch;
        }

        /* Cột trái và phải đều có chiều cao bằng nhau */
        .dashboard-left,
        .dashboard-right {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        /* Cho phép left co giãn chiều cao theo cột phải, nhưng không ép nội dung con */
        .dashboard-left {
            flex: 1;
        }

        .dashboard-right {
            flex: 1;
        }

        /* KHÔNG ép các .data-card co dãn bằng nhau */
        .data-card {
            flex: none; /* giữ nguyên chiều cao tự nhiên */
        }


        .data-card {
            background: #f9fbff;
            border: 1px solid rgba(0, 86, 216, 0.18);
            border-radius: 12px;
            box-shadow: 0 14px 32px rgba(15, 35, 95, 0.08);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
            flex: 1;
        }

        .panel-title {
            font-weight: 600;
            color: #003d99;
            font-size: 1.1rem;
            letter-spacing: 0.02em;
        }

        .chart-container-lg {
            position: relative;
            width: 100%;
            height: clamp(280px, 35vh, 360px);
            flex: 1;
        }

            .chart-container-lg .echart-surface {
                position: absolute;
                inset: 0;
            }

        /* KPI CARD */
        .kpi-grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1rem;
        }

        .donut-box {
            background: radial-gradient(circle at 50% 0%, #f4f8ff 0%, #eaf1ff 90%);
            border: 1px solid rgba(0, 86, 216, 0.18);
            border-radius: 12px;
            box-shadow: 0 12px 24px rgba(13, 40, 104, 0.12);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            gap: 0.35rem;
            min-height: 110px;
            text-align: center;
        }

        .donut-percent {
            font-size: clamp(1.1rem, 1.9vw, 1.6rem);
            font-weight: 700;
            color: #001b4e;
        }

        .donut-label {
            font-size: clamp(0.85rem, 1.1vw, 1.05rem);
            color: #30497a;
            font-weight: 500;
        }
    </style>

}
