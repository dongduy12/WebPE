@{
    ViewData["Title"] = "Bonepile";
    Layout = "~/Areas/Bonepile/Views/Shared/_Layout_Bonepile.cshtml";
}

<div class="dashboard-stage">
    <div class="dashboard-wrapper">
        <div class="dashboard-grid">
            <div class="dashboard-left">
                <div class="data-card chart-card">
                    <div class="chart-container-lg">
                        <div id="statusBarChart" class="echart"></div>
                    </div>
                </div>
                <div class="chart-card">
                    <div class="mini-charts">
                        <div class="mini-chart-box">
                            <div class="mini-chart-title">AGING</div>
                            <div class="chart-container-aging">
                                <div id="agingPieChart" class="echart"></div>
                            </div>
                        </div>
                        <div class="mini-chart-box">
                            <div class="mini-chart-title">N/A</div>
                            <div class="chart-container-pie">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dashboard-right">
                <div class="data-card kpi-card">
                    <div class="kpi-grid">
                        <div class="donut-box"><div class="donut-percent" id="totalCount">N/A</div><div class="donut-label">Total</div></div>
                        <div class="donut-box"><div class="donut-percent" id="reworkFGCount">N/A</div><div class="donut-label">ReworkFG</div></div>
                        <div class="donut-box"><div class="donut-percent" id="scrapCount">N/A</div><div class="donut-label">ScrapHasTask</div></div>
                        <div class="donut-box"><div class="donut-percent" id="noTaskscrapCount">N/A</div><div class="donut-label">ScrapLackTask</div></div>
                        <div class="donut-box"><div class="donut-percent" id="waitingScrapCount">N/A</div><div class="donut-label">WaitingApprovalScrap</div></div>
                        <div class="donut-box"><div class="donut-percent" id="approvedBGACount">N/A</div><div class="donut-label">ApprovedBGA</div></div>
                        <div class="donut-box"><div class="donut-percent" id="underRepairRECount">N/A</div><div class="donut-label">UnderRepairInRE</div></div>
                        <div class="donut-box"><div class="donut-percent" id="underRepairPDCount">N/A</div><div class="donut-label">UnderRepairInPD</div></div>
                        <div class="donut-box"><div class="donut-percent" id="notRepairProcessCount">N/A</div><div class="donut-label">Can'tRepairProcess</div></div>
                        <div class="donut-box"><div class="donut-percent" id="waitingCheckOutCount">N/A</div><div class="donut-label">WaitingCheckout</div></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="data-card table-card">
            <div class="table-responsive">
                <table id="sumMaterialsTable" class="table table-bordered table-striped datatable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>SERIAL_NUMBER</th>
                            <th>PRODUCT_LINE</th>
                            <th>MODEL_NAME</th>
                            <th>MO_NUMBER</th>
                            <th>WIP_GROUP</th>
                            <th>TEST_GROUP</th>
                            <th>TEST_CODE</th>
                            <th>ERROR_CODE_ITEM</th>
                            <th>TEST_TIME</th>
                            <th>ERROR_DESC</th>
                            <th>WORK_FLAG</th>
                            <th>ERROR_FLAG</th>
                            <th>CHECKIN_TIME</th>
                            <th>AGING_DAY</th>
                            <th>LOCATION</th>
                            <th>STATUS</th>
                            <th>REPAIR</th>
                            <th>STATION_TEST_OFF</th>
                            <th>TEST_OFF_RESULT</th>
                            <th>TEST_OFF_DETAIL</th>
                            <th>TEST_OFF_TIME</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/areas/bonepile/js/bonepile.js?v=@DateTime.Now.Ticks"></script>
    <style>
        /* === GLOBAL RESET === */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: radial-gradient(circle at 50% 0%, #f7faff 0%, #dfe9ff 60%);
            color: #1e2a45;
            font-family: "Segoe UI", "Roboto", Arial, sans-serif;
            min-height: 100vh;
            overflow-y: auto;
        }

        /* === DASHBOARD STAGE === */
        .dashboard-stage {
            width: 100%;
            display: flex;
            justify-content: center;
            padding: 0;
            overflow-x: hidden;
        }

        /* === DASHBOARD WRAPPER === */
        .dashboard-wrapper {
            width: 100%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 0;
            transform-origin: top center;
            transition: transform 0.25s ease;
        }

        /* === MAIN GRID === */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 0.65fr 0.35fr;
            gap: 1.5rem;
            align-items: stretch; /* ✅ 2 cột bằng chiều cao */
        }

        /* === COLUMN STRUCTURE === */
        .dashboard-left,
        .dashboard-right {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            height: 100%;
        }

            .dashboard-left > .data-card,
            .dashboard-right > .data-card {
                flex: 1; /* ✅ chiếm đều chiều cao */
                height: 100%;
            }

        /* === CARD STYLE === */
        .data-card {
            background: #f9fbff;
            border: 1px solid rgba(0, 86, 216, 0.18);
            border-radius: 12px;
            box-shadow: 0 14px 32px rgba(15, 35, 95, 0.08);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .panel-title {
            font-weight: 600;
            color: #003d99;
            font-size: 1.1rem;
            letter-spacing: 0.02em;
        }

        /* === CHART CONTAINERS === */
        .chart-container-lg {
            flex: 1;
            min-height: clamp(260px, 35vh, 360px);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .chart-container-lg .echart {
                width: 100% !important;
                height: 100% !important;
            }

        .mini-charts {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.25rem;
        }

        .mini-chart-box {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: inset 0 0 0 1px rgba(0, 86, 216, 0.12);
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            flex: 1;
        }

        .mini-chart-title {
            font-weight: 600;
            font-size: 0.95rem;
            color: #0f2458;
            text-transform: uppercase;
            letter-spacing: 0.08em;
        }

        .chart-container-aging,
        .chart-container-pie {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: clamp(200px, 30vh, 280px);
        }

            .chart-container-aging .echart,
            .chart-container-pie .echart {
                width: 100% !important;
                height: 100% !important;
            }

        /* === KPI GRID === */
        .kpi-card {
            gap: 1.25rem;
        }

        .kpi-grid {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1rem;
            align-content: stretch;
        }

        .donut-box {
            background: radial-gradient(circle at 50% 0%, #f4f8ff 0%, #eaf1ff 90%);
            border: 1px solid rgba(0, 86, 216, 0.18);
            border-radius: 12px;
            box-shadow: 0 12px 24px rgba(13, 40, 104, 0.12);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            gap: 0.35rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .donut-box:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 28px rgba(13, 40, 104, 0.16);
            }

        .donut-percent {
            font-size: clamp(1.1rem, 1.9vw, 1.6rem);
            font-weight: 700;
            color: #001b4e;
        }

        .donut-label {
            font-size: clamp(0.85rem, 1.1vw, 1.05rem);
            color: #30497a;
            font-weight: 500;
            text-align: center;
        }

        /* === TABLE === */
        .table-card {
            padding: 1.5rem;
        }

            .table-card .panel-title {
                margin-bottom: 0.75rem;
            }

        .table-responsive {
            width: 100%;
            overflow-x: auto;
        }

        #sumMaterialsTable {
            font-size: 0.85rem;
            color: #1e2a45;
            width: 100%;
        }

            #sumMaterialsTable th,
            #sumMaterialsTable td {
                white-space: nowrap;
            }

            #sumMaterialsTable th {
                background: #edf3ff;
                color: #0f2458;
                font-weight: 600;
            }

            #sumMaterialsTable tbody tr:nth-child(odd) {
                background: rgba(237, 243, 255, 0.45);
            }

        /* === CHART GENERIC === */
        .echart {
            width: 100%;
            height: 100%;
        }

        /* Responsive adjustments */
        @@media (max-width: 1400px) {
            .dashboard-grid {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 1024px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
            .dashboard-right {
                order: -1; /* Cho KPI lên đầu khi thu nhỏ */
            }
        }

    </style>
}
